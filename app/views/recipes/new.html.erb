<h1>レシピを作成する<h1>
 
  <%= form_with model: @recipe, url: recipes_path, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
   <%# 料理画像 %>
   <div class="recipe-new-text">料理画像
     <%= f.file_field :image, id: "item-image" %>
   </div>

   <%# 料理名 %>
   <div class='field'>
     <div class="recipe-new-text">料理名
      <%= f.text_field :title%>
     </div>
   </div>

   <%# 料理カテゴリー %>
   <div class='field'>
    <div class="recipe-new-text">分類
     <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div>
   </div>

   <%# 食材 %>
  <div class="field">
    <%= f.label :ingredients, class: "recipe-new-text" %>
    <%= f.text_field :ingredients, class: "ingredients-input" %>
  </div>

   <%# 調味料 %>
  <div class="field">
    <%= f.label :seasonings, class: "recipe-new-text" %>
    <%= f.text_field :seasonings, class: "seasonings-input" %>
  </div>
   
   <%# 作り方 %>
  <div class="field">
    <%= f.label :steps, class: "recipe-new-text" %>
    <%= f.text_field :steps, class: "steps-input" %>
  </div> 

  <%# 作成ボタン %>
  <div class="actions">
    <%= f.submit "作成する" ,id:"submit-button", class:"recipe-button" %>
    <%= link_to "戻る", recipes_path %> 
  </div>

<% end %>